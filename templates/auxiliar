    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var btnAvisos = document.getElementById('btnAvisos');
            var dvAvisos = document.getElementById('dvAvisos');
            var closePopup = document.getElementById('closePopup');
            
            btnAvisos.addEventListener('click', function() {
                dvAvisos.style.display = 'block';
            });
            
            closePopup.addEventListener('click', function() {
                dvAvisos.style.display = 'none';
            });
            
            window.addEventListener('click', function(event) {
                if (event.target == dvAvisos) {
                    dvAvisos.style.display = 'none';
                }
            });
            
            // Configura la fecha mínima como hoy
            var today = new Date().toISOString().split('T')[0];
            document.getElementById('fecha_inicio').setAttribute('min', today);
            document.getElementById('fecha_fin').setAttribute('min', today);
        });
    </script>
